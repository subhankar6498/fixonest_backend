<div
  style="height: 80vh"
  class="d-flex align-items-center justify-content-center"
>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <!-- Display success message if available -->
        <% if (successMessage && successMessage.length > 0) { %>
        <div class="alert alert-success mt-3" role="alert">
          <%= successMessage %>
        </div>
        <% } %>

        <!-- Display error message if available -->
        <% if (errorMessage && errorMessage.length > 0) { %>
        <div class="alert alert-danger mt-3" role="alert">
          <%= errorMessage %>
        </div>
        <% } %>
        <div class="card shadow">
          <div class="card-body">
            <h3 class="mb-4 text-center">Edit Service Category</h3>
            <form
              id="createCategoryForm"
              action="<%= '/admin' + generateUrl('update-service-Category',{id:data.result._id}) %>"
              method="POST"
              enctype="multipart/form-data"
            >
              <!-- Category Name -->
              <div class="mb-3">
                <label for="categoryName" class="form-label"
                  >Category Name</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="categoryName"
                  name="categoryName"
                  value="<%=data.result.categoryName%>"
                  placeholder="Enter category name"
                  required
                />
              </div>

              <!-- Category Image -->
              <div class="mb-3">
                <label for="categoryImage" class="form-label"
                  >Category Image</label
                >
                <input
                  type="file"
                  class="form-control"
                  id="categoryImage"
                  name="categoryImage"
                  accept="image/*"
                />
              </div>
              <% if (data.result.categoryImage) { %>
              <div class="mt-2">
                <img
                  src="<%= data.result.categoryImage %>"
                  alt="Current Profile"
                  class="img-thumbnail"
                  style="max-width: 100px; max-height: 100px"
                />
              </div>
              <% } %>

              <!-- Submit Button -->
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </form>

            <div class="text-center mt-3">
              <p>
                Go to Service table:
                <a href="<%='/admin' + generateUrl('service-table-page')%>"
                  >click</a
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
